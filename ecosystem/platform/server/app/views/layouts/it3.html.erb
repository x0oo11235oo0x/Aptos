<% content_for(:page_title, 'AIT3 - Aptos Incentivized Testnet 3') %>
<% content_for(:page_description, 'Register your node for AIT3') %>
<% content_for(:meta) do %>
  <meta property="og:image" content="https://aptoslabs.com/images/meta/aptos_meta_og_ait3.jpg">
<% end %>

<%= render 'layouts/application' do %>
  <div class="bg-neutral-900 text-white h-full">
    <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 md:px-8 py-12 sm:py-24">
      <h3 class="text-base uppercase text-teal-400 mb-2 font-mono">AIT3</h3>
      <h2 class="text-6xl mb-4 font-display font-light">Incentivized Testnet</h2>
      <div class="mb-16">
        <%= render DividerComponent.new(scheme: :primary) %>
      </div>
      <div class="flex flex-col md:flex-row gap-14 md:gap-18 2xl:gap-36 justify-between">
        <%= yield %>
        <div class="w-full lg:w-96 flex-1">
          <%= render CardOutlineComponent.new(class: 'md:sticky md:top-32') do %>
            <h3 class="flex items-center gap-2 font-mono uppercase text-xl mb-2 mt-4">
              <%= render IconComponent.new(:calendar, class: 'w-[21px] h-[21px]') %>
              Schedule
            </h3>
            <div class="mb-8"><%= render DividerComponent.new %></div>
            <p class="mb-8 font-light text-neutral-200 leading-snug leading-snug text-sm"><em>All dates and times shown are for Pacific Time.</em></p>
            <h4 class="font-mono uppercase text-teal-400 mb-1">August 19</h4>
            <h5 class="block font-display text-lg leading-tight mb-1 ">Registration Starts</h5>
            <p class="mb-8 font-light text-neutral-200 leading-snug leading-snug">Node and Identity Verification begins.</p>
            <h4 class="font-mono uppercase text-teal-400 mb-1">August 25</h4>
            <h5 class="block font-display text-lg leading-tight mb-1 ">Node Registration Locked</h5>
            <p class="mb-8 font-light text-neutral-200 leading-snug leading-snug">Only 48 hours left to complete identity verification.</p>
            <h4 class="font-mono uppercase text-teal-400 mb-1">August 29</h4>
            <h5 class="block font-display text-lg leading-tight mb-1 ">Selection Process Concludes</h5>
            <p class="mb-8 font-light text-neutral-200 leading-snug leading-snug">Email notifications are sent on the 29th.</p>
            <h4 class="font-mono uppercase text-teal-400 mb-1">August 30</h4>
            <h5 class="block font-display text-lg leading-tight mb-1 ">Validator Score Tracking Begins</h5>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
