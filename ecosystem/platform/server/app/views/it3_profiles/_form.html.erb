<div>
  <%= form_with(model: it3_profile, class: 'flex basis-full flex-col md:flex-row md:gap-10 md:justify-between', data: { turbo: !@show_recaptcha_v2, controller: 'recaptcha', action: 'recaptcha#validate' }, builder: AptosFormBuilder) do |f| %>
    <div>
      <% if it3_profile.errors.any? %>
        <div id="error_explanation" class="flex p-4 mb-4 bg-red-100 rounded-lg lg:w-96" role="alert">
          <div class="ml-3 text-sm font-medium text-red-700">
            <h2><%= pluralize(it3_profile.errors.count, 'error') %> prohibited this from being saved:</h2>

            <ul>
              <% it3_profile.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div>
        <div class="mb-16">
          <h3 class="text-teal-400 font-mono uppercase text-2xl mb-2">Public Keys</h3>
          <div class="mb-8"><%= render DividerComponent.new %></div>

          <div class="mb-6">
            <%= f.label :owner_key, class: 'font-mono uppercase block mb-2' %>
            <%= f.text_field :owner_key, required: true, pattern: '0x[a-f0-9]{64}', spellcheck: false %>
          </div>
          <div class="mb-6">
            <%= f.label :consensus_key, class: 'font-mono uppercase block mb-2' %>
            <%= f.text_field :consensus_key, autofocus: true, required: true, pattern: '0x[a-f0-9]{96}', spellcheck: false %>
          </div>
          <div class="mb-6">
            <%= f.label :consensus_pop, 'Consensus PoP', class: 'font-mono uppercase block mb-2' %>
            <%= f.text_field :consensus_pop, required: true, pattern: '0x[a-f0-9]{192}', spellcheck: false %>
          </div>
          <div class="mb-6">
            <%= f.label :account_key, class: 'font-mono uppercase block mb-2' %>
            <%= f.text_field :account_key, required: true, pattern: '0x[a-f0-9]{64}', spellcheck: false %>
          </div>
          <div class="mb-6">
            <%= f.label :network_key, 'Validator Network Key', class: 'font-mono uppercase block mb-2' %>
            <%= f.text_field :network_key, required: true, pattern: '0x[a-f0-9]{64}', spellcheck: false %>
          </div>
        </div>

        <div class="mb-16">
          <h3 class="text-teal-400 font-mono uppercase text-2xl mb-2">Validator Node</h3>
          <div class="mb-8"><%= render DividerComponent.new %></div>

          <div class="mb-6">
            <%= f.label :validator_address, 'Address (IP or hostname)', class: 'font-mono uppercase block mb-2' %>
            <%= f.text_field :validator_address, required: true, spellcheck: false %>
          </div>

          <div class="flex gap-8 md:gap-16 mb-6 items-end">
            <div class="flex-1">
              <%= f.label :validator_port, 'Validator (noise) port', class: 'font-mono uppercase block mb-2' %>
              <%= f.text_field :validator_port, required: true, pattern: '[0-9]+', spellcheck: false %>
            </div>
            <div class="flex-1">
              <%= f.label :validator_metrics_port, 'Metrics port', class: 'font-mono uppercase block mb-2' %>
              <%= f.text_field :validator_metrics_port, required: true, pattern: '[0-9]+', spellcheck: false %>
            </div>
          </div>

          <div class="flex gap-8 md:gap-16 mb-4 items-end">
            <div class="flex-1">
              <%= f.label :validator_api_port, 'API port', class: 'font-mono uppercase block mb-2' %>
              <%= f.text_field :validator_api_port, required: true, pattern: '[0-9]+', spellcheck: false %>
            </div>
            <div class="flex-1"></div>
          </div>

        </div>

        <div class="mb-16">
          <h3 class="text-teal-400 font-mono uppercase text-2xl mb-2">
            Full Node <span class="text-teal-400 opacity-50 font-mono lowercase text-sm mb-2">[optional]</span>
          </h3>
          <div class="mb-8"><%= render DividerComponent.new %></div>

          <div class="mb-6">
            <%= f.label :fullnode_address, 'Address (IP or hostname)', class: 'font-mono uppercase block mb-2' %>
            <%= f.text_field :fullnode_address, spellcheck: false %>
          </div>

          <div class="mb-6">
            <%= f.label :fullnode_network_key, 'Fullnode Network Public Key', class: 'font-mono uppercase block mb-2' %>
            <%= f.text_field :fullnode_network_key, pattern: '0x[a-f0-9]{64}', spellcheck: false %>
          </div>

          <div class="flex gap-8 md:gap-16 mb-4 items-end">
            <div class="flex-1">
              <%= f.label :fullnode_port, class: 'font-mono uppercase block mb-2' %>
              <%= f.text_field :fullnode_port, pattern: '[0-9]+', spellcheck: false %>
            </div>
            <div class="flex-1"></div>
          </div>
        </div>
      </div>
    </div>

    <div>
      <div class="md:sticky md:top-32 max-w-md self-center ">
        <%= turbo_frame_tag 'nhc-menu', data: { controller: 'refresh', refresh_interval_value: 5.seconds, refresh_src_value: request.path, turbo_action: 'advance' } do %>

          <div class="bg-neutral-800 rounded-md px-4 py-8 md:px-8 md:py-16 2xl:px-16w-full md:w-auto">

            <% if !it3_profile.nhc_job_running? %>
              <div class="text-xs font-bold text-center mb-2">It may take a few minutes to validate your node</div>
              <%= f.submit 'Validate node', class: 'w-full mb-8' %>
              <div class="mb-8">
                <% if @show_recaptcha_v2 %>
                  <%= recaptcha_tags theme: :dark %>
                <% else %>
                  <%= recaptcha_v3(action: 'it3/update', site_key: ENV.fetch('RECAPTCHA_V3_SITE_KEY', nil), turbolinks: true) %>
                <% end %>
              </div>
              <div class="text-sm">
                <label class="flex gap-2 items-start cursor-pointer">
                  <%= f.check_box :terms_accepted, required: true %>
                  <span class="leading-tight">I agree to the Aptos <%= render(LinkComponent.new(href: terms_testnet_path, target: '_blank', rel: 'noopener noreferrer')) { 'Testnet Participation Terms of Use' } %>
                    .</span>
                </label>
              </div>

            <% else %>

              <div>
                We are currently validating your node. <br>
                It may take a few minutes to complete this process.
              </div>
            <% end %>

          </div>

          <% if it3_profile.nhc_output.present? %>
            <div class="bg-neutral-800 rounded-md px-4 py-8 md:px-8 md:py-16 2xl:px-16 mt-8 w-full md:w-auto">
              <div class="mb-8">Last Node Check Result</div>
              <%= simple_format(it3_profile.nhc_output, sanitize: false) %>
            </div>
          <% end %>

        <% end %>
      </div>
    </div>

  <% end %>
</div>
